{% extends 'front.html.twig' %}

{% block title %}New Reservation{% endblock %}


{% block body %}
    <div class="card-body">

        <h4 class="card-title">New Reservation</h4>
        {{ form_start(form) }}

        <div class="form-group">
            <label for="exampleInputUsername1">Date Debut</label>
            {{ form_widget(form.contratdebut) }}
            {{ form_errors(form.contratdebut) }}
        </div>
        <div class="form-group">
            <label for="exampleInputUsername1">Date Fin</label>
            {{ form_widget(form.contratfin) }}
            {{ form_errors(form.contratfin) }}
        </div>


        <div class="form-group">
            <label for="exampleInputUsername1">Objet</label>
            {{ form_widget(form.objet) }}
            {{ form_errors(form.objet) }}
        </div>

        <input type="submit" value="Enregistrer" class="btn btn-success"/>


        {{ form_end(form) }}
    </div>
{% endblock %}
