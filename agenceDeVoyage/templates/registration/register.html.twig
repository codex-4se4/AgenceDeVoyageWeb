{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
      {% block stylesheets %}
          <link rel="dns-prefetch" href="https://fonts.gstatic.com">
          <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,600" rel="stylesheet" type="text/css">
          <link rel="icon" href="Favicon.png">
          <!-- Bootstrap CSS -->
          <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
          <link rel="stylesheet" href="{{ asset('build/css/custom.css') }}" />
      {% endblock %}

{% block body %}


{% for flashError in app.flashes('verify_email_error') %}
    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}
<nav class="navbar navbar-expand-lg navbar-light navbar-laravel">
    <div class="container">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">S'authentifier</a>
                </li>
            </ul>

        </div>
    </div>
</nav>
<main class="login-form">
    <div class="container center" align="center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h1 align="center"><img src="{{ asset('build/images/van.png') }}" alt="Logo" width="150"
                                            height="150"><br/>Tunisia Trip</h1>
                    <form method="post">
                        {{ form_start(registrationForm) }}
                        <div class="form-group row">
                            <label for="nom" class="col-md-4 col-form-label text-md-right">Nom</label>
                            <div class="col-md-6">
                                {{ form_widget(registrationForm.nom) }}
                                {{ form_errors(registrationForm.nom) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="prenom" class="col-md-4 col-form-label text-md-right">Prénom</label>
                            <div class="col-md-6">
                                {{ form_widget(registrationForm.prenom) }}
                                {{ form_errors(registrationForm.prenom) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="email" class="col-md-4 col-form-label text-md-right">Email</label>
                            <div class="col-md-6">
                                {{ form_widget(registrationForm.email) }}
                                {{ form_errors(registrationForm.email) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="cin" class="col-md-4 col-form-label text-md-right">CIN</label>
                            <div class="col-md-6">
                                {{ form_widget(registrationForm.cin) }}
                                {{ form_errors(registrationForm.cin) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="passeport" class="col-md-4 col-form-label text-md-right">Passeport</label>
                            <div class="col-md-6">
                                {{ form_widget(registrationForm.passeport) }}
                                {{ form_errors(registrationForm.passeport) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="login" class="col-md-4 col-form-label text-md-right">Login</label>
                            <div class="col-md-6">
                                {{ form_widget(registrationForm.login) }}
                                {{ form_errors(registrationForm.login) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="mdp" class="col-md-4 col-form-label text-md-right">Mot de passe</label>
                            <div class="col-md-6">
                                {{ form_widget(registrationForm.mdp) }}
                                {{ form_errors(registrationForm.mdp) }}
                            </div>
                        </div>
                       <button type="submit" class="btn">Créer un compte</button>
                        {{ form_end(registrationForm) }}
                    </form>
                </div>
            </div>
        </div>
    </div>

</main>

    {% block scripts %}
        <script src="{{ asset('build/js/custom.js') }}"></script>
    {% endblock %}
{% endblock %}
